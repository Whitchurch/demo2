<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="shortestPathAlgor.Views.Splash.Page_Splash"
            xmlns:customControls="clr-namespace:shortestPathAlgor.CustomControls;assembly=shortestPathAlgor"
             BackgroundColor="Black">
    <ContentPage.Content>
        <StackLayout>
            <customControls:Custom_Label Text="{Binding PropertySplashScreenText}"

                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <customControls:Custom_SubLabel  Text="{Binding PropertyLoader}"
                
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>